
@using Microsoft.AspNetCore.Mvc.Rendering
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> HtmlHelper

<header>
    <nav class="navbar-custom">
        <a class="navbar-brand" asp-area="" asp-page="/Index">StudyPlanner</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link @(GetNavLinkClass(ViewContext, "/Index"))" asp-area="" asp-page="/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(GetNavLinkClass(ViewContext, "/Privacy"))" asp-area="" asp-page="/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(GetNavLinkClass(ViewContext, "/Auth/Login"))" asp-area="" asp-page="/Auth/Login">Sign In</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(GetNavLinkClass(ViewContext, "/Auth/SignUp"))" asp-area="" asp-page="/Auth/SignUp">Sign Up</a>
            </li>
        </ul>
    </nav>
</header>

@functions {
    public string GetNavLinkClass(ViewContext viewContext, string page)
    {
        var currentPage = viewContext.RouteData.Values["page"]?.ToString();
        return string.Equals(currentPage, page, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}
