<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Study Planner</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Your Custom Stylesheet -->
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <script src="~/js/navbar.js"></script>
    
</head>
<body>
    <header>
        <nav class="navbar-custom">
            <a class="navbar-brand" asp-area="" asp-page="/Index">StudyPlanner</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Auth/Login">Sign In</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active-btn" asp-area="" asp-page="/Auth/SignUp">Sign Up</a>
                </li>
            </ul>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
</body>
</html>

