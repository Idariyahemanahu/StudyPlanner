@page
@model MyApp.Namespace.SignUpModel
@{
}
<div class="account-card">
    <div style="margin-bottom: 1.5rem;">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#28a745" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="8.5" cy="7" r="4"></circle>
            <line x1="20" y1="8" x2="20" y2="14"></line>
            <line x1="17" y1="11" x2="23" y2="11"></line>
        </svg>
    </div>

    <h1>Create Account</h1>
    <p style="margin-bottom: 2rem; color: #666;">Start your journey with us today.</p>

    <form method="post">
        <div class="form-group">
            <label asp-for="NewUser.Email" >Email Address</label>
            <input asp-for="NewUser.Email" class="form-control" placeholder="you@example.com" />
        </div>
        <div class="form-group">
            <label asp-for="NewUser.Name">Username</label>
            <input asp-for="NewUser.Name" class="form-control" placeholder="Choose a username" />
        </div>
        <div class="form-group">
            <label asp-for="NewUser.Password">Password</label>
            <input asp-for="NewUser.Password" class="form-control" type="password" placeholder="" />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <button type="submit" class="btn-primary">Sign Up</button>
    </form>
    
    <div class="switch-form-link">
        Already have an account? <a href="/Auth/Login">Sign In</a>
    </div>
</div>