@page
@model MyApp.Namespace.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="login-container">
    <div class="account-card">
        <div style="margin-bottom: 1.5rem;">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="8.5" cy="7" r="4"></circle>
                <line x1="20" y1="8" x2="20" y2="14"></line>
                <line x1="17" y1="11" x2="23" y2="11"></line>
            </svg>
        </div>

        <h1>Create Account</h1>
        <p>Start your journey with us today.</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="NewUser.Email">Email Address</label>
                <input asp-for="NewUser.Email" class="form-control" placeholder="you@example.com" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Name">Username</label>
                <input asp-for="NewUser.Name" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="NewUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Password">Password</label>
                <input asp-for="NewUser.Password" class="form-control" type="password" placeholder="Create a password" />
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary">Sign Up</button>
        </form>

        <div class="switch-form-link">
            Already have an account? <a href="/Auth/Login">Sign In</a>
        </div>
    </div>
</div>